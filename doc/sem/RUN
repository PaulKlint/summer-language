rm [a-z]*
Split ../formdef.sm
ed - subscript <<!
/<identifier>/s//<unit>/
w
q
!
ed - select <<!
/<identifier>/s//<unit>/
w
q
!
for f in [a-z]*
do
echo $f
ed - $f <<!
g/^#-#/d
w
q
!
tr -cs ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789_ \
 '\012' <$f | sort | uniq | comm -12 - Indexlist >.tmp1
ed - .tmp1 <<!
g/^/s//.iy I /
w
!
ed - $f <<!
g/^\.iy/d
0a
.{{
.
\$a
.}}
.
0r .tmp1
\$r .tmp1
w
q
!
Boldkw <$f >.tmp2
mv .tmp2 $f
rm .tmp1
done
