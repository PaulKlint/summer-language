proc t(s)
( put(s, ':\t\t', string(real(s)), '\n')
);

proc q(v, sb)
( put(v, ':\t\t', sb, '\n')
);

program reals ()
( var neg, neg2;
       t('1');
	t('+1');
	t('-1');
	t('1.0');
	t('.5');
	t('-.5');
	t('12.3');
	t('-12.3');
	t('12.3e4');
	t('12.3e+4');
	t('12.3e-4');
	t('-12.3e-4');
	t('-.e1');
	t('-.');
	t('e-2');
	t('e1');

	put('\n\n');
	q(1.0 + 1, '2.0');
	q(1 + 1.0, '2.0');
	q(2.0 - 1, '1.0');
	q(1 - 2.0, '-1.0');
	q(2.0 * 3, '6.0');
	q(3 * 2.0, '6.0');
	q(2.0 / 2, '1.0');
	q(2 / 2.0, '1.0');

	if 1.0 ~= 1.0 then stop(-1) fi;
	if 1.0 ~= 1 then stop(-2) fi;
	if 1 ~= 1.0 then stop(-3) fi;

	if 1.5 > 1.0 then else stop(-4) fi;
	if 1.5 > 1 then else stop(-5) fi;
	if 2 > 1.5 then else stop(-6) fi;

	if 2.0 < 2.5 then else stop(-7) fi;
	if 2.5 < 3 then else stop(-8) fi;
	if 2 < 2.5 then else stop(-9) fi;

	neg := -2.5;
	neg2 := -neg;
        if neg > 0 | neg2 < 0 then stop(-10) fi;
)
