#	while-do construction	#

include 'heading.sm';

program whiledo ()
( var x, y, n, i, j;

  start('whiledo');
  test(n := 0);
  i := -1;
  while i > 0 do error(n+0) od;

  i := 1;
  while i <= 3
  do
     if i ~= 1 & i ~= 2 & i ~= 3 then error(n+i) fi;
     i := i + 1
  od;
  if i ~= 4 then error(n+4) fi;

  test(n := 10);
  x := 0;
  i := 1;
  while i <= 3
  do j := 1;
     while j <= 5
     do
        x := x + 10*i + j;
        j := j + 1
     od;
     i := i + 1;
  od;
  y := (11+12+13+14+15) + (21+22+23+24+25) + (31+32+33+34+35);
  if x ~= y then error(n+0) fi;
 
  test(n := 20);
  x := 20000;
  while x >= 0 do x := x - 1 od;
  if x ~= -1 then error(n+0) fi;

  finish('whiledo');
)
