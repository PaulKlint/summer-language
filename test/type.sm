# ttype -- test type function		#
#                                       #

proc error(n) put('ERROR: ', n, '\n');

class some_dummy_class_decl ()
begin
end some_dummy_class_decl;
program ttype ()
( var x, f;
  if type(0) ~= 'integer' then error(1) fi;
  if type('abc') ~= 'string' then error(2) fi;
  if type([0,1,2]) ~= 'array' then error(3) fi;
  if type(table['a' : 'A']) ~= 'table' then error(4) fi;
  if type(x) ~= 'undefined' then error(5) fi;
  f := file('tmp','w');
  if type(f) ~= 'file' then error(6) fi;
  if type(1.5) ~= 'real' then error(7) fi;
  if type(scan_string('abc')) ~= 'scan_string' then error(8) fi;
  if type(interval(2, 3, 5)) ~= 'interval' then error(8) fi;
  if type(some_dummy_class_decl) ~= 'some_dummy_class_decl' then error(9) fi;
)
