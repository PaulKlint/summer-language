#								#
#	ifargs -- conditional expressions as actual parameter	#
#								#

proc test10(a, a10)
  if a * 10 ~= a10 then put(a, ' ', a10, '\n') fi;

proc mul10(a)
  return(10 * a);

proc p2(a, aa)
(  test10(a, aa)
);

proc p4(a, aa, b, bb)
(  test10(a, aa);
   test10(b, bb)
);

program ifargs()
( var x := 2, y := 4, z := 6;

  p2(x, if x = 2 then x * 10 else 0 fi);
  p2(if x = 2 then x else 0 fi, 10 * x);

  p4(x, if x = 2 then x * 10 else 0 fi, if y ~= 4 then 0 else y fi, 10 * y);
  p4(x, if x ~= 2 then 0 else 10 * x fi, y, if y ~= 4 then 0 else 10 * y fi);
  p4(x, if 10 * x ~= mul10(x) then 0 else mul10(x) fi, y, mul10(y));
)
